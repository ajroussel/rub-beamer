\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerthemerubfocus}[2019/08/23 v1.0 RUB Beamer theme]

\mode<presentation>


% THEME OPTIONS. ---------------------------------------------------------------
\DeclareOptionBeamer{numbering}{%
    \PassOptionsToPackage{numbering=#1}{beamerouterthemefocus}
}

\ProcessOptionsBeamer


% LOAD EXTERNAL PACKAGES. ------------------------------------------------------

\usecolortheme{rubfocus}
\usefonttheme{rubfocus}
\useinnertheme{rubfocus}
\useoutertheme{rubfocus}

\setbeamertemplate{navigation symbols}{}

\usepackage{fontspec}
\setromanfont{RUB Scala MZ}
\setsansfont{RubFlama}

\usepackage{hyperref}
\usepackage{booktabs}
\usepackage{soul}

% style links with custom color
\hypersetup{%
    colorlinks=true,
    urlcolor=alert,
    pdfborderstyle={/S/U/W 1}%
}

%%%%%%%%%
\newcommand{\link}[1]{\texttt{\ul{#1}}}


% SET MARGINS. -----------------------------------------------------------------
\setbeamersize{text margin left=0.75cm, text margin right=0.75cm}
\setlength{\leftmargini}{0.75cm}

\mode<all>
